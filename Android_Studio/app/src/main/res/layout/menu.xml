<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:background="@drawable/gc_app_pantallas_blanco">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="413dp"
        android:layout_height="100dp"
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cuadrado"
        tools:ignore="ImageContrastCheck,VisualLintBounds" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/archivo_black"
        android:text="@string/reportes"
        android:textColor="#FFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        tools:ignore="TextContrastCheck" />

    <ImageButton
        android:id="@+id/perfil_b"
        android:layout_width="58dp"
        android:layout_height="52dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.797"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.508"
        app:srcCompat="@drawable/image"
        tools:ignore="ContentDescription,ImageContrastCheck,SpeakableTextPresentCheck" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="409dp"
        android:layout_height="400dp"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.22">

        <Button
            android:id="@+id/Usuario_but"
            android:layout_width="196dp"
            android:layout_height="60dp"
            android:backgroundTint="#2fb0c6"
            android:text="Usuarios"
            app:cornerRadius="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:ignore="DuplicateSpeakableTextCheck,HardcodedText,TextContrastCheck" />

        <Button
            android:id="@+id/Recolectores_but"
            android:layout_width="196dp"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="#2fb0c6"
            android:text="Recolectores"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:textStyle="bold"
            app:cornerRadius="10dp"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <Button
            android:id="@+id/Residuos_but"
            android:layout_width="196dp"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="#2fb0c6"
            android:text="Materiales"
            app:cornerRadius="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <Button
            android:id="@+id/Centros_but"
            android:layout_width="196dp"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="#2fb0c6"
            android:text="Centros"
            app:cornerRadius="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,TextContrastCheck" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>